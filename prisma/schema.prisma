generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // ğŸ”¹ New settings/trust fields
  timezone             String  @default("UTC")
  theme                String? @default("light")
  primaryColor         String  @default("blue")
  reminderDailyTime    String?
  reminderDailyEnabled Boolean @default(false)
  summaryWeeklyEnabled Boolean @default(false)

  habits    Habit[]
  groups    HabitGroup[] @relation("UserGroups")
  accounts  Account[]
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Habit {
  id          String  @id @default(cuid())
  userId      String
  name        String
  description String?

  // ğŸ”¹ Replaced/clarified targets
  weeklyTarget Int @default(4) // target completions per week

  isArchived Boolean @default(false)
  color      String  @default("gray")

  // ğŸ”¹ Sorting helpers (Soon features)
  priority  Int     @default(2) // 1=high,2=med,3=low
  timeOfDay String? // "morning" | "afternoon" | "evening"

  // ğŸ”¹ Groups system - simpler than tags
  groupId String?
  group   HabitGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs HabitLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ğŸ”¹ Fast queries & duplicate-name guard
  @@unique([userId, name])
  @@index([userId, isArchived])
  @@index([userId, groupId])
}

model HabitLog {
  id      String   @id @default(cuid())
  habitId String
  date    DateTime
  status  String   @default("done") // "done" | "skipped"
  note    String?

  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([habitId, date])
  @@index([habitId, date])
}

model HabitGroup {
  id     String  @id @default(cuid())
  userId String
  name   String
  color  String  @default("blue")
  icon   String? // Optional emoji like "ğŸ’ª", "ğŸƒ", "ğŸ“š"
  order  Int     @default(0) // Custom sorting order

  user   User    @relation("UserGroups", fields: [userId], references: [id], onDelete: Cascade)
  habits Habit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId, order])
}
